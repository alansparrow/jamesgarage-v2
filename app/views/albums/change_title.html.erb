<h1>Change album's title</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">


    <% if @album && @album.errors.any? %>
    <div class="row">
      <div class="alert alert-danger">
	<% @album.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
	<% end %>
      </div>
    </div>
    <% end %>


    <%= form_for(@album, :html => {:multipart => true}) do |f| %>
    
    <div class="row">
      <%= f.label "Album Title" %>
    </div>
    <div class="row">
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <p></p>
    <div class="row">
      <%= f.submit "Change title", class: "btn btn-success col-md-offset-4" %>
    </div>

    <% end %>
  </div>
</div>

