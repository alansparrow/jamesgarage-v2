
<h1>Edit Album <%= @album.title %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
	<%= form_for(@picture, url: {action: "create"}, html: {class: "form-inline offset-from-top"}) do |f| %>
	<%= f.file_field :picture, class: "form-control" %>
	<%= f.submit "Upload", class: "btn btn-success btn-sm form-control" %>
	<% end %>
	
	<p></p>

	<%= form_tag edit_album_path(@album), method: "get" do %>
	<%= submit_tag "Done", class: "btn btn-primary col-md-offset-4" %>
	<% end %>

      
    </div>

  </div>


</div>
