
<div class="row offset-from-top">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      
    <div>
      <div class="row">
	  <%= f.label :email %>
      </div>
      <div class="row">
	<%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    
    <div>
      <div class="row">
	<%= f.label :password %>
      </div>
      <div class="row">
	<%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    
    <p></p>
    <div class="row">
      <%= f.submit "Sign in", class: "btn btn-primary col-md-offset-4" %>
    </div>

    <% end %>
    <p></p>
  </div>
</div>
